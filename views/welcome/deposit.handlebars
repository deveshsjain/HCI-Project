<article>
    <div class="bg-light">
        <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="http://localhost:3000">Budget Tracker</a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="./howitworks">How it works</a>
                    </li>
                </ul>
                {{#if error}}
                <div class="alert alert-danger" role="alert">
                    {{error}}
                </div>
                {{/if}}
                {{#if logoutMsg}}
                <div class="alert alert-success" role="alert">
                    {{logoutMsg}}
                </div>
                {{/if}}
                <div>
                    <form class="form-inline my-2 my-lg-0" id="login-form" method="POST" action="/home">
                        <a href="/Logout"><button class="btn btn-outline-success my-2 my-sm-0" name="login" id="login"
                                type="submit">Logout</button></a>
                    </form>
                </div>
            </div>
        </nav>

        <!-- Modal -->
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Add expenses</h5>
                </div>
                <div class="modal-body">
                    <div class="d-inline text-black">Type:</div>
                    <input type="text" class="form-control col-3" id="basic-url" aria-describedby="basic-addon3">

                    <div class="d-inline text-black">Bank Name:</div>
                    <input type="text" class="form-control col-3" id="basic-url" aria-describedby="basic-addon3">

                    <div class="d-inline text-black">Amount:</div>
                    <input type="text" class="form-control col-3" id="basic-url" aria-describedby="basic-addon3">

                    <div class="d-inline text-black">Account Open Date:</div>
                    <input type="text" class="form-control col-3" id="basic-url" aria-describedby="basic-addon3">
                </div>
                <div class="modal-footer">
                    {{!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Previous</button>
                    <button type="button" class="btn btn-primary">Next</button> --}}
                    <a href="/expenses"><button type="button" class="btn btn-primary">OK</button></a>
                </div>
            </div>
        </div>
    </div>
</article>