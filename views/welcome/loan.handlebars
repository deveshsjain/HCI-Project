<article>
    <div class="bg-light">
        <nav class="navbar navbar-expand-lg navbar navbar-dark bg-dark">
            <a class="navbar-brand" href="http://localhost:3000"><img src="./public/images/logo.jpg" alt="Budget Tracker" width="80" height="50"></a>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="./howitworks">How it works</a>
                    </li>
                </ul>
                {{#if error}}
                <div class="alert alert-danger" role="alert">
                    {{error}}
                </div>
                {{/if}}
                {{#if logoutMsg}}
                <div class="alert alert-success" role="alert">
                    {{logoutMsg}}
                </div>
                {{/if}}
                <a href="/Logout"><button class="btn btn-outline-success my-2 my-sm-0" name="login" id="login"
                        type="submit">Logout</button></a>
            </div>
        </nav>
        <form id="loaninfo-form" method="POST" action="/loan">
            {{#if alertMsg}}
            <p class="alertMsg">{{alertMsg}}</p>
            {{/if }}
            <div class="card border-primary mb-3 mx-auto">
                <div class="card-header bg-dark text-font-white">Add Loan</div>
                <div class="card-body text-primary">
                    <div class="d-inline text-font-black">Category</div>
                    <input type="text" class="form-control col-10 mt-2" name="category" id="category"
                        aria-describedby="basic-addon3">
                    <div class="d-inline text-font-black">Amount Due</div>
                    <input type="text" class="form-control col-10 mt-2" name="amountdue" id="amountdue"
                        aria-describedby="basic-addon3">
                </div>
                <div class="modal-footer bg-dark">
                     <input type="submit"  name="addnewloan" id="addnewloan" formaction  ="loan/add"value="Add New Loan " onclick="window.location.href='/loan/add'" class="btn btn-secondary"/>  
                    <a href="./creditcardinfo"><button type="button" name="previous" id="previous"
                            class="btn btn-secondary" data-dismiss="modal">Previous</button></a>
                    <button type="submit" name="next" id="next" onclick="window.location.href='/loan'" class="btn btn-primary">Next</button>
                </div>
        </form>
    </div>
</article>